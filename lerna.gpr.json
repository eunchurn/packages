{
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "npmClientArgs": [
    "--no-lockfile"
  ],
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "version": {
      "npmClient": "yarn",
      "message": "chore(release): publish"
    },
    "publish": {
      "registry": "https://npm.pkg.github.com"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}