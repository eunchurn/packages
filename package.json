{
  "name": "root",
  "version": "0.4.7",
  "description": "",
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "start": "lerna run start --stream",
    "tsc": "lerna run tsc --stream",
    "watch": "lerna run watch --stream",
    "project-init": "lerna run project-init --stream",
    "typecheck": "lerna run typecheck --stream",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "lint": "eslint 'packages/**/**/*.ts'",
    "lint-fix": "eslint 'packages/**/**/*.ts' --fix",
    "release-docs": "typedoc  --exclude node_modules --out output/api --theme minimal --mode file",
    "tsdoc": "typedoc",
    "tsdoc:test": "typedoc --out docs packages/ring-ts/src/index.ts",
    "lerna:create": "lerna create",
    "lerna:add": "lerna add --no-bootstrap",
    "lerna:publish:github": "lerna publish from-package --yes --registry https://npm.pkg.github.com --no-verify-registry --no-verify-access",
    "lerna:publish:npm": "lerna publish from-package --yes --registry https://registry.npmjs.org --no-verify-registry --no-verify-access",
    "lerna:release": "lerna publish from-package",
    "lerna:publish": "yarn lerna:publish:npm && yarn lerna:publish:github",
    "release": "standard-version",
    "version": "lerna version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eunchurn/ts-utils.git"
  },
  "keywords": [],
  "author": "Eunchurn Park <eunchurn.park@gmail.com> (https://github.com/eunchurn)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eunchurn/ts-utils/issues"
  },
  "homepage": "https://github.com/eunchurn/ts-utils#readme",
  "devDependencies": {
    "@types/jest": "28.1.2",
    "@typescript-eslint/eslint-plugin": "5.28.0",
    "@typescript-eslint/parser": "5.28.0",
    "eslint": "8.18.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "28.1.1",
    "lerna": "4.0.0",
    "prettier": "2.7.1",
    "standard-version": "9.5.0",
    "ts-jest": "28.0.5",
    "ts-node": "10.8.1",
    "typedoc": "0.22.17",
    "typedoc-plugin-markdown": "3.12.1",
    "typescript": "4.7.4"
  },
  "engines": {
    "node": "^12 || ^14 || >=16.0.0"
  }
}
