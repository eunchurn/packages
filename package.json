{
  "name": "root",
  "version": "0.0.1",
  "description": "",
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "start": "lerna run start --stream",
    "tsc": "lerna run tsc --stream",
    "watch": "lerna run watch --stream",
    "typecheck": "lerna run typecheck --stream",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "lint": "eslint 'packages/**/**/*.ts'",
    "lint-fix": "eslint 'packages/**/**/*.ts' --fix",
    "release-docs": "typedoc  --exclude node_modules --out output/api --theme minimal --mode file",
    "tsdoc": "typedoc",
    "tsdoc:test": "typedoc --out docs packages/ring-ts/src/index.ts",
    "lerna:create": "lerna create",
    "lerna:add": "lerna add --no-bootstrap",
    "lerna:publish:github": "lerna publish from-package --registry https://npm.pkg.github.com",
    "lerna:publish:npm": "lerna publish --registry https://registry.npmjs.org",
    "lerna:release": "lerna publish from-package",
    "lerna:publish": "yarn lerna:publish:npm && yarn lerna:publish:github"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eunchurn/ts-utils.git"
  },
  "keywords": [],
  "author": "Eunchurn Park <eunchurn.park@gmail.com> (https://github.com/eunchurn)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eunchurn/ts-utils/issues"
  },
  "homepage": "https://github.com/eunchurn/ts-utils#readme",
  "devDependencies": {
    "@types/jest": "26.0.24",
    "@typescript-eslint/eslint-plugin": "5.2.0",
    "@typescript-eslint/parser": "5.2.0",
    "eslint": "7.29.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "3.4.1",
    "jest": "26.6.3",
    "lerna": "4.0.0",
    "prettier": "2.3.1",
    "ts-jest": "26.5.6",
    "ts-node": "10.0.0",
    "typedoc": "0.20.37",
    "typedoc-plugin-markdown": "3.9.0",
    "typescript": "4.3.4"
  },
  "engines": {
    "node": "^12 || ^14 || >=16.0.0"
  }
}